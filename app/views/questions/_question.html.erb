
  
<div id="<%= dom_id question %>">
  <% index=@questions.find_index(question) %>
  <div class="w-full px-8 py-4">
    <div class="w-full">
      <p class="text-xl text-gray-600">
        Q<%= index+1 %>.&ensp;
        <%= question.question %>
      </p>
        <div class="mt-4 space-y-4 mb-6">

        <% question.options.each do |option| %>
          <div class="flex items-center mb-2">
            <input id="<%= index %><%=option %>" name="correct-answer<%= question.id %>" type="radio" class="focus:ring-cyan-500 h-4 w-4 text-cyan-600 border-gray-300">
            <label for="<%= index %><%=option %>" class="ml-3 block text-sm font-medium text-gray-700"><%= option %></label>
          </div>
        <% end %>

        </div>
    </div>
  </div>
</div>

